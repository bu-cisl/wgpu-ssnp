            }
        } else {
            std::cerr << "Failed to map buffer! Status: " << int(status) << std::endl;
        }
        mappingComplete = true;
    });

    // Wait for the mapping to complete
    while (!mappingComplete) {
    #ifndef __EMSCRIPTEN__
